{
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./lib",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declarationDir": "./lib/",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./src/main.tsx",
    "./src/components/App.tsx",
    "./src/**/*.stories.tsx"
  ],
}